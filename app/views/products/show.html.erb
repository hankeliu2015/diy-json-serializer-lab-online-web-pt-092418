<h3>Product show page</h3>
  <div class="productName">
    <%= @product.name %>
  </div>
  <div class="productDescription">
    <%= @product.description %>
  </div>
  <div class="productPrice">
    <%= @product.price %>
  </div>
  <div class="productInventory">
    <%= @product.inventory %>
  </div>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript">

  $(function() {
    $(".js-next").on("click", function(e) {
      e.preventDefault()
      let nextId = parseInt($(".js-next").attr("date-id")) + 1;
      $.getJSON("/product" + nextId + "/data", function(data) {
        $(".productName").text(data["name"]);
        $(".productPrice").text(data["price"]);
        $(".productInventory").text(data["inventory"]);
        $(".productDescription").text(data["description"]);

        $(".js-next").attr("data-id", data["id"])
      });
    });
  });
</script>
